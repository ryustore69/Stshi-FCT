{
  "manifest_version": 3,
  "name": "Satoshi Faucet Bot - Chrome Extension",
  "version": "2.0.2",
  "description": "ðŸš€ Fully automated bot for Satoshi Faucet with advanced features including faucet claims, shortlinks, and daily challenges. AI-powered emoji captcha solving with 22+ cryptocurrency support.",
  "author": "Satoshi Faucet Bot Team",
  "homepage_url": "https://github.com/ryustore69/Stshi-FCT",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://satoshifaucet.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Satoshi Faucet Bot - Start earning cryptocurrency automatically!"
  },
  "content_scripts": [
    {
      "matches": ["https://satoshifaucet.io/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://satoshifaucet.io/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "minimum_chrome_version": "88"
}